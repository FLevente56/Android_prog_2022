<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResetPassword">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
        <ImageView
            android:id="@+id/hatter_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/background"
            android:tintMode="multiply"
            app:tint="@color/dark_blue_1" />

        <ImageView
            android:id="@+id/logo_1"
            android:layout_width="match_parent"
            android:layout_height="106dp"
            android:src="@drawable/logo"
            android:tintMode="multiply"
            app:layout_constraintBottom_toTopOf="@id/login_box"
            app:layout_constraintTop_toTopOf="@id/hatter_1"
            app:tint="@color/dark_blue_1"
            tools:layout_editor_absoluteX="0dp" />

        <View
            android:id="@+id/login_box"
            android:layout_width="150pt"
            android:layout_height="100pt"
            app:layout_constraintBottom_toBottomOf="@id/hatter_1"
            app:layout_constraintTop_toBottomOf="@id/logo_1"
            app:layout_constraintLeft_toLeftOf="@id/hatter_1"
            app:layout_constraintRight_toRightOf="@id/hatter_1"
            />

        <TextView
            android:id="@+id/reset_password_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset Your Password!"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="@id/login_box"
            app:layout_constraintLeft_toLeftOf="@id/login_box"
            app:layout_constraintRight_toRightOf="@id/login_box"
            app:layout_constraintBottom_toTopOf="@id/reset_password_input"

            />
        <EditText
            android:id="@+id/reset_password_input"
            android:layout_width="100pt"
            android:layout_height="wrap_content"
            android:text="Enter your email"
            android:layout_margin="1dp"
            app:layout_constraintTop_toBottomOf="@id/reset_password_txt"
            app:layout_constraintLeft_toLeftOf="@id/login_box"
            app:layout_constraintRight_toRightOf="@id/login_box"
            app:layout_constraintBottom_toTopOf="@id/reset_password_button"
            android:background="@color/white"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/reset_password_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            app:layout_constraintTop_toBottomOf="@id/reset_password_input"
            app:layout_constraintLeft_toLeftOf="@id/login_box"
            app:layout_constraintRight_toRightOf="@id/login_box"
            app:layout_constraintBottom_toBottomOf="@id/login_box"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>