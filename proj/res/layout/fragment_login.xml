<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/hatter_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background"
        android:tintMode="multiply"
        app:tint="@color/dark_blue_1" />

    <ImageView
        android:id="@+id/logo_1"
        android:layout_width="match_parent"
        android:layout_height="106dp"
        android:src="@drawable/logo"
        android:tintMode="multiply"
        app:layout_constraintBottom_toBottomOf="@id/login_box"
        app:layout_constraintTop_toTopOf="@id/hatter_1"
        app:tint="@color/dark_blue_1"
        tools:layout_editor_absoluteX="0dp" />

    <View
        android:id="@+id/login_box"
        android:layout_width="150pt"
        android:layout_height="100pt"
        android:background="@color/dark_blue_1"

        app:layout_constraintBottom_toBottomOf="@id/hatter_1"
        app:layout_constraintTop_toBottomOf="@id/logo_1"
        app:layout_constraintLeft_toLeftOf="@id/hatter_1"
        app:layout_constraintRight_toRightOf="@id/hatter_1"

        />

    <EditText
        android:id="@+id/email_input"
        android:layout_width="100pt"
        android:layout_height="wrap_content"
        android:text="Enter your email"
        android:layout_margin="1dp"
        app:layout_constraintTop_toTopOf="@id/login_box"
        app:layout_constraintLeft_toLeftOf="@id/login_box"
        app:layout_constraintRight_toRightOf="@id/login_box"
        app:layout_constraintBottom_toTopOf="@id/password_input"
        android:background="@color/white"
        />

    <EditText
        android:id="@+id/password_input"
        android:layout_width="100pt"
        android:layout_height="wrap_content"
        android:text="Enter your password"
        android:layout_margin="1dp"
        app:layout_constraintTop_toBottomOf="@id/email_input"
        app:layout_constraintLeft_toLeftOf="@id/login_box"
        app:layout_constraintRight_toRightOf="@id/login_box"
        android:background="@color/white"
        />
    <TextView
        android:id="@+id/forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot password?"
        />

</androidx.constraintlayout.widget.ConstraintLayout>